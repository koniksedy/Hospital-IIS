@{
    ViewData["Title"] = "Titulní stránka";
}

<style>
    a.test {
        background-image: url("Img/Shared/corona.jpg");
        display: inline-block;
        height: 200px !important;
        width: 350px;
        
    }
    .test-text {
        position: absolute;
        top: 50%;
        left: 50%;
        margin-top: -1em;
        margin-left: -50%;
        width: 100%;
        height: 2em;
    }

    .mouseover {
        position: relative;
        height: 100%;
        width: 100%;
        background-image: url("Img/Shared/btn-image-active.png");
    }


</style>

<div class="row">
    <div class="col-6">
        <h1>
            Zdaravotní informace<br />
            <strong>na jednom místě</strong>
        </h1>
        <p class="card-subtitle">
            Mějte své lékařské zprávy neustále pod hodledem.<br />
            Ať už z role lékaře, nebo pacienta.
        </p>
       
    </div>
    <div class="col-6">
        <div class="row">
            <div onmouseover="addgreen()" onmouseout="delgreen()" onmouseup="delgreen()" class="col12" style="width:350px;height:200px">
                <a class="test" href="/Home/Corona">
                    <div id="corona" >
                        <div class="test-text">Corona-19</div>
                    </div>   
                </a>               
            </div>
        </div>
    </div>
</div>

<script>
    function addgreen() {
        document.getElementById("corona").classList.add("mouseover");
    }
    function delgreen() {
        document.getElementById("corona").classList.remove("mouseover");
    }
</script>